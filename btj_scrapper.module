/**
 * Implements hook_cron().
 */
function btj_scrapper_cron() {
  /** @var \Drupal\Core\Entity\EntityTypeInterface $entityDefinition */
  $entityTypeManager = \Drupal::service('entity_type.manager');
  /** @var \Drupal\Core\Entity\EntityTypeInterface $entityDefinition */
  $entityDefinition = $entityTypeManager->getDefinition('group');

  $bundleField = $entityDefinition->getKey('bundle');
  $loadProperties = [
    $bundleField => 'municipality',
  ];

  /** @var \Drupal\group\Entity\GroupInterface[] $group_entities */
  $group_entities = $entityTypeManager
    ->getStorage('group')
    ->loadByProperties($loadProperties);

  $controller = new ScrapController();
  $controller->resetRelations();

  $bundles = [/*'library', 'news',*/ 'event'];
  foreach ($group_entities as $group_entity) {
    foreach ($bundles as $bundle) {
      $controller->prepare($group_entity, $bundle);
    }
  }

  /** @var \Drupal\Core\Queue\QueueFactory $queue_factory */
  $queue_factory = \Drupal::service('queue');
  /** @var \Drupal\Core\Queue\QueueInterface $queue */
  $queue = $queue_factory->get('btj_scrap_queue');
  // Reset the queue to exclude possibilities of repeated items in the queue.
  // It is vital that the queue is actually processable during the pause
  // between consequent cron runs.
  $queue->deleteQueue();

  $rows = \Drupal::database()->select('btj_scrapper_relations', 'bsr')
    ->fields('bsr')
    ->condition('bsr.status', 0)
    ->orderBy('weight', 'DESC')
    ->range(0, 100)
    ->execute()
    ->fetchAll();

  foreach ($rows as $row) {
    $item = new \stdClass();
    $item->gid = $row->gid;
    $item->entity_id = $row->entity_id;
    $item->type = $row->type;
    $item->bundle = $row->bundle;
    $item->link = $row->item_url;
    $item->uid = $row->uid;

    $queue->createItem($item);
  }

}
